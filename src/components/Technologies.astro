---
import HTMLIcon from "./icons/HTML.astro"
import CSSIcon from "./icons/CSS.astro"
import JavaScriptIcon from "./icons/JavaScript.astro"
import PHPIcon from "./icons/PHP.astro"
import PythonIcon from "./icons/Python.astro"
import JavaIcon from "./icons/Java.astro"
import SQLIcon from "./icons/SQL.astro"

interface Technology {
  name: string
  icon: any
  class?: string
}

const TECHNOLOGIES: Technology[] = [
  {
    name: "HTML",
    icon: HTMLIcon,
  },
  {
    name: "CSS",
    icon: CSSIcon,
  },
  {
    name: "JavaScript",
    icon: JavaScriptIcon,
  },
  {
    name: "PHP",
    icon: PHPIcon,
  },
  {
    name: "SQL",
    icon: SQLIcon,
  },
  {
    name: "Python",
    icon: PythonIcon,
  },
  {
    name: "Java",
    icon: JavaIcon,
  }
]
---

<div class="flex flex-wrap gap-6 justify-center">
  {
    TECHNOLOGIES.map(({ name, icon: Icon, class: className }) => (
      <div class="flex flex-col items-center gap-2">
        <Icon class={`size-12 ${className ?? ""}`} />
        <span class="text-sm font-medium">{name}</span>
      </div>
    ))
  }
</div>
